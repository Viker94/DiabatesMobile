<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_eat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.utp.projekt.Activities.EatActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:weightSum="100">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="458dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:weightSum="120"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:weightSum="100"
                android:layout_weight="10.49">

                <TextView
                    android:text="Produkt"
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView5"

                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="41.84" />

                <TextView
                    android:text="Ilość"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView2"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="54.90" />

            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/list">

            </ListView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:weightSum="100"
            android:layout_weight="6">

            <TextView
                android:text="Woda"
                android:layout_width="77dp"
                android:layout_height="match_parent"

                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_weight="22.87" />
            <TextView
                android:text="Potas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_weight="27.42" />
            <TextView
                android:text="Sód"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_weight="54.90" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:weightSum="100"
            android:layout_weight="6">

            <TextView
                android:text="Brak"
                android:layout_width="77dp"
                android:layout_height="match_parent"

                android:id="@+id/textwoda"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_weight="22.87" />
            <TextView
                android:text="Brak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textpotas"

                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_weight="27.42" />
            <TextView
                android:text="Brak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textsod"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_weight="54.90" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">


            <Button
                android:text="Zapisz"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/save"
                android:layout_weight="50"
                android:onClick="save"/>
            <Space
                android:layout_width="28dp"

                android:layout_height="match_parent"
                android:layout_weight="3"/>
            <Button
                android:text="Dodaj produkt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/eat"
                android:layout_weight="50"
                android:onClick="add"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="Brak danych"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/brak"
        android:textSize="32sp"

        android:gravity="center_vertical"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_weight="27.42"
        android:layout_marginTop="40dp"
        android:layout_marginStart="107dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
