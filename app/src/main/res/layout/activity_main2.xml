<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.utp.projekt.Activities.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="100">

        <TextView
            android:text="TextView"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:textAlignment="center" />

        <TextView
            android:text="\nWoda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tWater"
            android:textSize="18sp"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/pWater"
                android:layout_weight="5.16"
                android:max="100" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ppWater"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:text="\nPotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tPotassium"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/pPotassium"
                android:layout_weight="5.16"
                android:max="100" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ppPotassium"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:text="\nSód"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="18sp"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/pSodium"
                android:layout_weight="5.16"
                android:max="100" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ppSodium"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:id="@+id/spacer"
            android:layout_height="0dp"
            android:layout_weight="100"/>

        <Button
            android:text="GRAPH TEMP BUTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tempGraph" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <Button
                android:text="Limity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/limit"
                android:layout_weight="1"
                android:elevation="0dp"
                style="@style/Widget.AppCompat.Button"
                android:textAlignment="center" />

            <Button
                android:text="Odejmij wodę"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bWater"
                android:layout_weight="1" />

            <Button
                android:text="Dodanie posiłku"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/eat"
                android:layout_weight="1"
                android:onClick="openEat"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
